@model CellperNetCore.Models.Customer
@{
    ViewData["Title"] = "CustomerSelection";
}
    <h4>Seleccionar cliente</h4>
    <hr />
@using (Html.BeginForm("ListCustomer", "Reception", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-10">
            <div class="form-row">
                <div class="form-group col-md-4">
                    Indique el número de cédula:
                </div>
                <div class="form-group col-md-4">
                    <p>@Html.TextBoxFor(x => x.CustomerIdcard)</p>
                </div>
                <div class="form-group col-md-4">
                    <input type="submit" class="btn btn-default" value="Buscar" />
                </div>
            </div>
        </div>
    </div>
}



